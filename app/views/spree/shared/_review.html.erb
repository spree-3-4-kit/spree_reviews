<div class="review spree-well" <% if !Spree::Reviews::Config[:feedback_rating] && (Spree::Reviews::Config[:require_login] || spree_current_user) %>style="padding-bottom:0;"<% end %> >
  <span class="reviews-rating" title="<%= txt_stars(review.rating) %>">
    <%= render 'spree/reviews/stars', stars: review.rating %>
  </span>
<h3 style="margin:0;">
  <%= review.title %>
</h3>
  <span class="attribution hide"><span class="micro"><%= Spree.t(:submitted_on) %></span>
    <strong><%= l review.created_at.to_date %></strong>
  </span>
  <div class="review-submitter-info">
      <% if review.show_identifier %>
      <span class="micro"><%= Spree.t(:submitted_by) %></span>
        <% if Spree::Reviews::Config[:show_email] && review.user %>
          <span><%= review.user.email %></span>
        <% else %>
          <span><%= review.name %></span>
        <% end %>
      <% else %>
        <span><%= Spree.t(:anonymous) %></span>
      <% end %>
</div>
  <div class="review-body">
      <%= raw (review.review) %>
  </div>
  <% if Spree::Reviews::Config[:feedback_rating] && (!Spree::Reviews::Config[:require_login] || spree_current_user) %>
    <div class="feedback_review row middle-sm" id="feedback_review_<%= review.id %>">
      <%= render 'spree/feedback_reviews/form', review: review %>
    </div>
  <% end %>
</div>
